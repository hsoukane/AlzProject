rule"assistance plan 1"
ruleflow-group"NeurolgyService1"
salience 4
when
syp1:upec.Symptom(description=="Aphasia" )
plan1:upec.AssistancePlan(this!=null )
then
plan1.setDescription("Speech therapy");
end

