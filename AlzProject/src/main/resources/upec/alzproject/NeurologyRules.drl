rule"alzheimer treatment1"
ruleflow-group"NeurologyService2"
salience 4
no-loop true
when
diagnosis:upec.Diagnosis(value=="Alzheimer mild stage")
treatment:upec.Treatment( )
then
treatment.setName("cholinesterase inhibitor");
end

